<%= simple_form_for @cocktail, html: {class: 'form-inline'} do |f| %>
  <%= f.submit "Add it", class: 'submit btn', id: 'add-drink' %>
  <%= f.input :name, label: false, input_html: { class: 'input' }, placeholder: "What's missing?" %>
  <%= f.input :photo, as: :file, label: false, input_html: { class: 'input' } %>
<% end %>
