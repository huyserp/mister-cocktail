<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.ingredient.name %> <%= dose.description %> <%= link_to "Remove", dose_path(dose),
    method: :delete,
    data: { confirm: "Are you sure?" },
    class: 'ml-3 text-danger'%>
   </p>
<% end %>

<%= render './doses/form' %>
<%= link_to "<< All Cocktails", cocktails_path %>
