<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
  <div class="dose-info">
    <p><%= dose.description %> <%= dose.ingredient.name %></p>
    <%= link_to dose_path(dose), method: :delete do %>
          <i class="fas fa-undo-alt"></i>
    <% end %>
  </div>
<% end %>
<div class="form-new-ingredient">
  <%= render './doses/form' %>
</div>
<%= link_to "Drink List", cocktails_path, {class: "btn-back"} %>

