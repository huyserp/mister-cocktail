<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
  <div class="dose-info">
    <p><%= dose.description %> <%= dose.ingredient.name %></p>
    <%= link_to dose_path(dose), method: :delete do %>
          <i class="fas fa-undo-alt"></i>
    <% end %>
  </div>
<% end %>

<%= render './doses/form' %>
<%= link_to "<< All Cocktails", cocktails_path %>
