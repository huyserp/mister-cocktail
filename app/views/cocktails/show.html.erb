<div class="banner">
  <h1><%= @cocktail.name %></h1>
</div>
<div class="container">
  <div class="all-ingredients">
    <div class="form-new-ingredient">
      <%= render './doses/form' %>
    </div>
    <% @cocktail.doses.each do |dose| %>
      <div class="dose-info">
        <p><%= dose.description %> <%= dose.ingredient.name %></p>
        <%= link_to dose_path(dose), method: :delete do %>
            <i class="fas fa-minus"></i>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= link_to "Back To Drink List", cocktails_path, {class: "btn"} %>
</div>
