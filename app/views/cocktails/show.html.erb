
<div class="container">
  <div class="show">
    <% if @cocktail.photo.attached? %>
      <div class="card drink-display" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, crop: :fill %>')">
        <p><%= @cocktail.name %></p>
      </div>
    <% else %>
      <div class="card drink-display" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/500x400/?cocktails')">
          <p><%= @cocktail.name %></p>
      </div>
    <% end %>
    <div class="all-ingredients">
      <div class="form-new-ingredient">
        <%= render './doses/form' %>
      </div>
      <% @cocktail.doses.each do |dose| %>
        <div class="dose-info">
          <p><%= dose.description %> <%= dose.ingredient.name %></p>
          <%= link_to dose_path(dose), method: :delete do %>
              <i class="fas fa-minus"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <%= link_to "Back To Drink List", cocktails_path(:anchor => "list-start"), {class: "btn"} %>
  </div>
</div>
